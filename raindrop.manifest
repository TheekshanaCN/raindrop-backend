application "hello-world" {

  env "MONGODB_URI" {
    default = ""
  }

   env "RAINDROP_API_KEY" {
    secret = true
  }
  
  service "saas-processor" {
    visibility = "public"
    domain {
      cname = "saas-processor"
    }
  }

  // SmartMemory for AI context and memory management
  smartmemory "idea-memory" {}

  // SQL Database for storing ideas (currently using in-memory cache)
  sql_database "ideas-db" {}
}